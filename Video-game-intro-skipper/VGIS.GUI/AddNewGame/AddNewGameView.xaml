<Window x:Class="VGIS.GUI.AddNewGame.AddNewGameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VGIS.GUI.AddNewGame"
        mc:Ignorable="d"
        Title="Add a new game" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130" /> 
            <ColumnDefinition Width="130" /> 
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="70" />
            <ColumnDefinition Width="30" /> 
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0">Name:</Label>
        <TextBox  VerticalContentAlignment="Center" Margin="2" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="6"></TextBox>
        <Label Grid.Row="1">Publisher:</Label>
        <TextBox  VerticalContentAlignment="Center"  Margin="2" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="6"></TextBox>
        <Label Grid.Row="2">Install Folder:</Label>
        <ComboBox Margin="2" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5"
                  ItemsSource="{Binding InstallFolders}" SelectedItem="{Binding Path=SelectedInstallFolder, Mode=TwoWay}"
                  />
        <Button Command="{Binding AddInstallFolderCommand}" Margin="2" Grid.Row="2" Grid.Column="6">+</Button>
        <Label Grid.Row="3">Game Folder:</Label>
        <ComboBox Margin="2" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="6"
                  ItemsSource="{Binding PotentialGameFolders}" SelectedItem="{Binding Path=SelectedGameFolder, Mode=TwoWay}"/>
        <Label Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4">Elements to rename:</Label>
        <Button Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="3" Margin="2">Add new File/Folder to rename</Button>
        <ListView Grid.Row="5"  Grid.Column="0" Grid.ColumnSpan="7" Margin="0 2 0 2">
            
        </ListView>
        <Label Grid.Row="6" Grid.Column="0">Game Illustration:</Label>
        <ComboBox Margin="2" Grid.Row="6" Grid.Column="1" />
        <TextBox  VerticalContentAlignment="Center" Margin="2" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="4"></TextBox>
        <Button Margin="2" Grid.Row="6" Grid.Column="6">?</Button>

        <Button Grid.Row="7" Grid.Column="3" Margin="2">Test</Button>
        <Button Grid.Row="7" Grid.Column="4" Margin="2">Cancel</Button>
        <Button Grid.Row="7" Grid.Column="5" Grid.ColumnSpan="2" Margin="2">Save</Button>
    </Grid>
</Window>
